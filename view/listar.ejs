<!DOCTYPE html>
<html>
<head>
  <title>Lista de Veículos</title>
</head>
<body>
  <h1>Lista de Veículos</h1>
  <a href="/cadastrar">Cadastrar novo veículo</a>
    <ul>
    <% veiculos.forEach(v => { %>
      <li>
        <%= v.id %> - <%= v.nome %>
        <form action="/editar/<%= v.id %>" method="POST" style="display:inline;">
          <input type="text" name="nome" placeholder="Novo nome">
          <button type="submit">Editar</button>
        </form>
        <form action="/del/<%= v.id %>" method="POST" style="display:inline;">
          <button type="submit">Deletar</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>